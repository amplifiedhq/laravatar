{
    "name": "martian/laravatar",
    "description": "ðŸš€ A lightweight and easy-to-use Laravel package that add avatars to your models",
    "keywords": [
        "amplifiedhq",
        "avatar",
        "laravel",
        "laravel-package",
        "laravel-8",
        "laravel-10",
        "boring-avatars",
        "avatars",
        "ui-avatars",
        "dicebear",
        "php",
        "gravatar"
    ],
    "homepage": "https://github.com/amplifiedhq/laravatar",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Josiah Endurance",
            "email": "hendurhance.dev@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Anofi AbdulHameed",
            "role": "Developer"
        },
        {
            "name": "AmplifiedHQ",
            "role": "Organization",
            "homepage": "https://github.com/amplifiedhq/laravatar"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.18",
        "pestphp/pest": "^1.23",
        "pestphp/pest-plugin-laravel": "^1.4",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AmplifiedHQ\\Laravatar\\": "src"
        },
        "files": [
            "src/Helpers/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AmplifiedHQ\\Laravatar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AmplifiedHQ\\Laravatar\\Providers\\LaravatarServiceProvider"
            ],
            "aliases": {
                "Laravatar": "AmplifiedHQ\\Laravatar\\Facades\\Laravatar"
            }
        }
    }
}
